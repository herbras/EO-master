---
import LottieAnimation from "astro-integration-lottie/Lottie.astro";

---

<section class="teees pt-24">
    <div class="container mx-auto px-4 mb-16">
      <div class="max-w-xl mx-auto text-center">
        <h2 class="mt-6 text-5xl uppercase font-heading">OUR HAPPY CLIENTS</h2>
      </div>
    </div>
    <div  class="flex flex-wrap slide-in-elliptic-top-fwd  light rounded-md">
      {Array.from({ length: 9 }).map((_, index) => (
        <div class="w-1/2 md:w-1/3 lg:w-1/5 h-40 md:h-60 hover:border-t-4 hover:border-b-4 border-slate-900 ">
          <div class="flex h-full items-center justify-center">
            <div class="container  align-middle w-6/12">
              <img  x-intersect="$el.classList.add('slide-in')" src={`/assets/${index + 2}.webp`} alt="" loading="lazy" />
            </div>
          </div>
        </div>
      ))}
       <div id="bawah" class="w-1/2 md:w-1/3 lg:w-1/5 h-40 md:h-60 hover:border-t-4 hover:border-b-4 border-slate-900 ">
        <div class="flex h-full items-center justify-center">
          <div class="container align-middle w-6/12">
            <img  x-intersect="$el.classList.add('slide-in')" src='/assets/11.webp' alt="" loading="lazy" />
          </div>
        </div>
      </div>
    </div>
  </section>

  <style>
    @media (min-width: 785px){
      #bawah {
        display: none;
      }
    }
    @media (min-width: 1021px){
      #bawah {
        display: block;
      }
    }
    .teees {
      color: var(--accent-text-over);
      text-decoration: none;
		background: var(--gray-999-basis);
		
	}
  .light{
    background-color: var(--gras);
    border-top: 1px solid var(--gray-800);
		border-bottom: 1px solid var(--gray-800);
    box-shadow: 0 0 15px var(--gras),
      0 0 15px var(--accent-overlay);
  }
