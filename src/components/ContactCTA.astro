---
import CallToAction from './CallToAction.astro';
---

<aside>
	<h2>Looking for an end-to-end
		event services?
		</h2>
	<CallToAction href="https://api.whatsapp.com/send/?phone=6285647059545&text=Assalamualaikum,+saya+ingin+kerja+sama+untuk+membuat+projek">
		Kirim Pesan
		<div class="container" style="width:1.4em">
			<img src="/assets/WA.webp" loading="eager"/>
		
		</div>
	</CallToAction>
</aside>

<style>
	aside {
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 3rem;
		border-top: 1px solid var(--gray-800);
		border-bottom: 1px solid var(--gray-800);
		padding: 5rem 1.5rem;
		background-color: var(--gray-999/40);
		box-shadow: var(--shadow-lg);
	}

	h2 {
		font-size: var(--text-xl);
		text-align: center;
		max-width: 15ch;
	}

	@media (min-width: 50em) {
		aside {
			padding: 7.5rem;
			flex-direction: row;
			flex-wrap: wrap;
			justify-content: space-between;
		}

		h2 {
			font-size: var(--text-3xl);
			text-align: left;
		}
	}
</style>
