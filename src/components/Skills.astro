---
import Icon from './Icon.astro';
import LottieAnimation from "astro-integration-lottie/Lottie.astro";
---
<h2 class="w-fit mx-auto">WHAT WE DO</h2>
<section class="box skills ">
	
	<div class="stack gap-2 lg:gap-4 ">
		<div class="container ml-24 md:ml-0  align-middle w-6/12 md:w-full">
			<LottieAnimation src="/assets/patrick.json" autoplay="visible" />

		</div>
		
		<div x-intersect="$el.classList.add('puff-in-center')" class="">
		<h2 id="eve">Event Organizing</h2>
		<ol>
			<li>Concept & Creative Development</li>
			<li>Production Plan</li>
			<li>Event Management</li>
		</ol>
	</div>
	</div>
	<div class="stack gap-2 lg:gap-4">
		<div class="container ml-24 md:ml-0 align-middle w-6/12 md:w-full">
		<LottieAnimation src="https://assets6.lottiefiles.com/packages/lf20_touohxv0.json" autoplay="visible" /></div>
		<div x-intersect="$el.classList.add('puff-in-center')" class="">
		<h2>Technical Event Production</h2>
		<ol>
			
			<li>Audio, Visual and Lighting Equipments</li>
			<li>Stage Construction and Equipment</li>
			<li>Exhibition Construction and Equipment</li>
			<li>Multimedia Broadcasting System</li>
		
		</ol></div>
	</div>
	<div class="stack gap-2 lg:gap-4">
		<div class="container ml-24 md:ml-0 align-middle w-6/12 md:w-full" id="bottos" >
		<LottieAnimation src="https://assets2.lottiefiles.com/private_files/lf30_fodvq9my.json" autoplay="visible" /></div>
		<div x-intersect="$el.classList.add('puff-in-center')" class=""><h2>Event Promotion Support</h2>
			<ol>
				
				<li>Photo and Video Documentation</li>
				<li>Poster, Flyer and Banner Production</li>
				<li>Event Permits</li>
			
			</ol></div>
	</div>
</section>

<style>
	.box {
		border: 1px solid var(--gray-800);
		border-radius: 0.75rem;
		padding: 1.5rem;
		background-color: var(--gray-999_40);
		box-shadow: var(--shadow-sm);
	}

	.skills {
		display: flex;
		flex-direction: column;
		gap: 3rem;
	}

	.skills h2 {
		font-size: var(--text-lg);
	}

	.skills p {
		color: var(--gray-400);
	}
	li{
		margin-top: 0.2em;	
	color: var(--gray-100);
 

	}
	li::before{
		content:"ðŸ“Œ ";
	}

#bottos{
	margin: 60px 0 30px 6rem;
}
	@media (min-width: 50em) {
		.box {
			border-radius: 1.5rem;
			padding: 2.5rem;
		}
		#bottos{
	margin: 60px 0 30px 0;
}
		.skills {
			display: grid;
			grid-template-columns: repeat(3, 1fr);
			gap: 5rem;
		}

		.skills h2 {
			font-size: var(--text-2xl);
		}
		#eve{
			width: 5em;
		}
	}

